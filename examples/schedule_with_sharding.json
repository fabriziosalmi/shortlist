{
  "tasks": [
    {
      "id": "system_governor",
      "type": "governor",
      "priority": -2,
      "required_role": "system",
      "config": {
        "check_interval_seconds": 60
      }
    },
    {
      "id": "video_broadcast",
      "type": "video",
      "priority": 5,
      "required_role": "media",
      "sharding": {
        "enabled": true,
        "items_per_shard": 5,
        "min_items_for_sharding": 10,
        "max_shards": 4
      },
      "config": {
        "video": {
          "resolution": "1920x1080",
          "framerate": 30,
          "bitrate": "4000k"
        },
        "output": {
          "directory": "/app/output/video_broadcast",
          "format": "mp4"
        }
      }
    },
    {
      "id": "image_gallery",
      "type": "image",
      "priority": 6,
      "required_role": "media",
      "sharding": {
        "enabled": true,
        "items_per_shard": 10
      },
      "config": {
        "image": {
          "max_width": 1920,
          "quality": 85,
          "format": "webp"
        },
        "output": {
          "directory": "/app/output/gallery",
          "naming": "item_{index}.webp"
        }
      }
    }
  ],
